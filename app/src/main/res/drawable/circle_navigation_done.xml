    <item android:drawable="@drawable/circle_navigation_done_shadow" />

    <item>


        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid
                android:color="@color/circle_profile_pic_background"/>

            <size
                android:width="25dp"
                android:height="25dp"/>

            <gradient
                android:startColor="@color/navigation_circle_done_1"
                android:endColor="@color/navigation_circle_done_2"
                android:angle="45"/>

        </shape>


    </item>


</layer-list>



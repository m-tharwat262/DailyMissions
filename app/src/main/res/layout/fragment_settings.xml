<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:gravity="center" >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/navigation_settings"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="2dp"
                        android:background="@android:color/white">


                        <View
                            android:layout_width="88dp"
                            android:layout_height="3dp"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:id="@+id/fragment_settings_top_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <LinearLayout
                        android:id="@+id/fragment_settings_edit_profile"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_edit_profile" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_edit_profile_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_settings_app_themes"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_app_themes" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_app_themes_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_settings_notification"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_backup" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_backup_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_settings_updates"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_notification" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_notification_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_settings_about_us"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_update" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_update_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_settings_backup"
                        style="@style/settings_item_layout_container">



                        <LinearLayout
                            style="@style/settings_item_layout_contain_texts">


                            <TextView
                                style="@style/settings_item_text_view_top"
                                android:text="@string/settings_about_app" />

                            <TextView
                                style="@style/settings_item_text_view_bottom"
                                android:text="@string/settings_about_app_details" />

                        </LinearLayout>



                        <LinearLayout
                            style="@style/settings_item_layout_contain_image_icon">


                            <ImageView
                                style="@style/settings_item_image_icon" />

                        </LinearLayout>



                        <TextView
                            style="@style/settings_item_small_circle" />



                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_below="@id/fragment_settings_top_items"
                    android:paddingBottom="40dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:id="@+id/fragment_settings_share"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|end"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/final_settings_item_curved">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeStepGranularity="1sp"
                                android:gravity="end"
                                android:text="@string/navigation_share"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                style="@style/settings_item_layout_contain_image_icon">


                                <ImageView
                                    style="@style/settings_item_image_icon" />

                            </LinearLayout>

                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:text="@string/settings_app_version" />

                            <TextView
                                android:id="@+id/fragment_settings_app_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/hint_text_color"
                                tools:text="V1.0.0" />



                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/fragment_settings_log_out"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|end"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/final_settings_item_curved">



                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_marginEnd="8dp"
                                    android:gravity="end"
                                    android:textStyle="bold"
                                    android:textSize="15sp"
                                    android:maxLines="1"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeMaxTextSize="16sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:textColor="@android:color/black"

                                    android:text="@string/navigation_logout"/>

                                <LinearLayout
                                    style="@style/settings_item_layout_contain_image_icon">


                                    <ImageView
                                        style="@style/settings_item_image_icon" />

                                </LinearLayout>

                            </LinearLayout>




                    </LinearLayout>


                </LinearLayout>



            </RelativeLayout>


        </ScrollView>


        </LinearLayout>





</FrameLayout>
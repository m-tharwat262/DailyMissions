<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:background="@drawable/ripple_main_item"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_fragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2/5/2021" />

        <TextView
            android:id="@+id/item_fragment_months_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="عدد الشهور 11" />


    </LinearLayout>


    <TextView
        android:id="@+id/item_fragment_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="سنه التخرج من الجامعه" />


    <LinearLayout
        android:id="@+id/item_fragment_circle_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        tools:background="@drawable/random_base_circle">


        <ImageView
            android:id="@+id/item_fragment_circle_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            tools:src="@drawable/random_icon_6" />

    </LinearLayout>



    <TextView
        android:id="@+id/item_fragment_small_circle"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="@drawable/random_base_circle" />


</LinearLayout>
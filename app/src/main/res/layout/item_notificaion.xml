<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_notification_day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2/5/2021" />

            <TextView
                android:id="@+id/item_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="عدد الشهور 11" />

            <TextView
                android:id="@+id/item_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="عدد الشهور 11" />


        </LinearLayout>


        <TextView
            android:id="@+id/item_notification_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="سنه التخرج من الجامعه" />


        <LinearLayout
            android:id="@+id/item_fragment_circle_layout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/notification_big_circle_background">


            <ImageView
                android:id="@+id/item_fragment_circle_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/random_icon_3" />

        </LinearLayout>



        <TextView
            android:id="@+id/item_fragment_test_small_circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:orientation="horizontal"
            android:background="@drawable/notification_small_circle_background" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="3dp"
        android:layout_marginStart="4dp"
        android:background="@color/vertical_line_notification_layout"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>



</LinearLayout>
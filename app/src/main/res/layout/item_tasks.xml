<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal"
    android:layoutDirection="rtl">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/item_not_clickable" >




    <TextView
        android:id="@+id/item_tasks_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/edit_profile_button"
        android:text="@string/edit_button"/>


    <TextView
        android:id="@+id/item_tasks_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="سنه التخرج من الجامعه" />


    <LinearLayout
        android:id="@+id/item_tasks_circle_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        tools:background="@drawable/random_base_circle">


        <ImageView
            android:id="@+id/item_tasks_circle_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            tools:src="@drawable/random_icon_6" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top">

            <TextView
                android:id="@+id/item_tasks_small_circle"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:background="@drawable/random_base_circle" />

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/item_tasks_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        tools:text="10:30"/>

</LinearLayout>